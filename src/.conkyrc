${lua_parse font body}${alignr}Up ${upspeedf $_net_name}KiB Down ${downspeedf $_net_name}KiB${font}
${lua_parse font body}${alignr}Connected to ${lua_parse var net_name} with ${lua_parse var net_ip}${font}
