conky.text = [[
${lua_parse mode}
${lua_parse font head}${alignr}${time %H:%M}${font}
${lua_parse font subhead}${alignr}${lua_parse var day_name} ${lua_parse var month_name}${time %e, %Y}${font}
${lua_parse font body}${alignr}Logged as $user_names at $nodename${font}
${lua_parse font body}${alignr}Running ${lua_parse var rls_arch} on ${lua_parse var rls_name} ${lua_parse var rls_codename}${font}
