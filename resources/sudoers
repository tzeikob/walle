# Sudoer rules to make no passwd service calls

Cmnd_Alias #ALIAS_NAME_ALIAS = \
    /bin/systemctl start #PKG_NAME.service, \
    /bin/systemctl stop #PKG_NAME.service, \
    /bin/systemctl restart #PKG_NAME.service, \
    /bin/systemctl status #PKG_NAME.service, \
    /usr/sbin/service #PKG_NAME start, \
    /usr/sbin/service #PKG_NAME stop, \
    /usr/sbin/service #PKG_NAME restart, \
    /usr/sbin/service #PKG_NAME status

#USER ALL = (root) NOPASSWD: #ALIAS_NAME_ALIAS